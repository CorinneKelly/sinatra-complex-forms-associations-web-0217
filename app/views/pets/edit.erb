<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">

	Pet Name: <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"><br>

	 <label>Choose an existing owner:</label>

	<%Owner.all.each do |owner|%>
	<input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner.id == owner.id %>>
	<%=owner.name%></input>
	<%end%>

	<label>and/or create new Owner </label><br>
	<label>name:</label>
	<input type="text" name="owner[name]" id="owner_name"></input><br>
	<input type="submit" value="Update Pet">


</form>
